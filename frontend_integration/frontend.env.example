# Environment Variables for Next.js Frontend
# Copy this to your frontend project as .env.local

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# App Configuration
NEXT_PUBLIC_APP_NAME=Sistema de Gesti√≥n de Proyectos
NEXT_PUBLIC_APP_VERSION=1.0.0

# Development Settings
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Authentication
NEXT_PUBLIC_TOKEN_KEY=access_token
NEXT_PUBLIC_REFRESH_TOKEN_KEY=refresh_token

# API Timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=10000

# Pagination defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Date format
NEXT_PUBLIC_DATE_FORMAT=DD/MM/YYYY
NEXT_PUBLIC_DATETIME_FORMAT=DD/MM/YYYY HH:mm:ss

# Currency
NEXT_PUBLIC_CURRENCY=COP
NEXT_PUBLIC_CURRENCY_SYMBOL=$

# File upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png

# Features flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_ADVANCED_SEARCH=true
