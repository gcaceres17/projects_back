# Configuración para Docker
# Copia este archivo a .env y ajusta los valores según sea necesario

# Database Configuration for Docker
DATABASE_URL=postgresql://usuario:password@postgres:5432/proyecto_db
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=proyecto_db
DATABASE_USER=usuario
DATABASE_PASSWORD=password

# Alternative connection for local development (when not using Docker)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/proyecto_db
# DATABASE_HOST=localhost

# Application Configuration
SECRET_KEY=docker-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development
DEBUG=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Redis Configuration (opcional)
REDIS_URL=redis://redis:6379/0

# Email Configuration (opcional)
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=tu-email@gmail.com
SMTP_PASSWORD=tu-password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Timezone
TIMEZONE=America/Bogota
